<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Core permissions -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Bluetooth (scan/connect) -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="31" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <!-- Legacy BT for < API 31 -->
    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30" />

    <!-- If you truly need location with classic BT scanning, keep this. Otherwise you can remove. -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:hardwareAccelerated="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZebraPrinterKCH"
        android:usesCleartextTraffic="true">

        <activity
            android:name="net.openid.appauth.RedirectUriReceiverActivity"
            android:exported="true"
            tools:node="merge">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="${appAuthRedirectScheme}"
                    android:path="/oauth2redirect" />
            </intent-filter>
        </activity>

        <!-- FileProvider for scan editing output -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".app.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ZebraPrinterKCH">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".landing.LandingActivity"
            android:exported="false"
            android:theme="@style/Theme.ZebraPrinterKCH" />

        <activity
            android:name=".login.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.ZebraPrinterKCH" />

        <activity
            android:name=".scan.ScanDeliverySlipActivity"
            android:exported="false"
            android:parentActivityName=".landing.LandingActivity"
            android:theme="@style/Theme.ZebraPrinterKCH" />

        <activity
            android:name=".scan.ScanResultActivity"
            android:exported="false"
            android:parentActivityName=".landing.LandingActivity"
            android:theme="@style/Theme.ZebraPrinterKCH" />

        <!-- Other screens -->
        <activity
            android:name=".product.ProductsActivity"
            android:exported="false"
            android:theme="@style/Theme.ZebraPrinterKCH" />

        <activity
            android:name=".grn.ui.GrnActivity"
            android:exported="false"
            android:theme="@style/Theme.ZebraPrinterKCH" />

        <!-- NEW: Add to Existing GRN (PO) -->
        <activity
            android:name=".grn.ui.add.AddToGrnActivity"
            android:exported="false"
            android:parentActivityName=".landing.LandingActivity"
            android:theme="@style/Theme.ZebraPrinterKCH" />

        <!-- Existing TO GRN -->
        <activity
            android:name=".grn.ui.to.ToGrnActivity"
            android:exported="false"
            android:parentActivityName=".landing.LandingActivity"
            android:theme="@style/Theme.ZebraPrinterKCH" />

        <activity
            android:name=".ZPLPrinterActivity"
            android:exported="false" />

        <activity
            android:name=".product.lots.LotsListActivity"
            android:exported="false" />

        <activity
            android:name=".inventory.InventoryActivity"
            android:exported="false"
            android:theme="@style/Theme.ZebraPrinterKCH" />

        <activity
            android:name=".grn.ui.ScannerActivity"
            android:exported="false" />
    </application>
</manifest>
