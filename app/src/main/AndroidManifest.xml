<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Core permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Bluetooth (scan/connect) -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <!-- Legacy BT for < API 31 -->
    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30" />

    <!-- If you truly need location with classic BT scanning, keep this. Otherwise you can remove. -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZebraPrinterKCH"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- FileProvider for scan editing output -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Launcher / Home -->
        <activity
            android:name=".landing.LandingActivity"
            android:exported="true"
            android:theme="@style/Theme.ZebraPrinterKCH">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Scan flow -->
        <activity
            android:name=".scan.ScanDeliverySlipActivity"
            android:exported="false"
            android:theme="@style/Theme.ZebraPrinterKCH"
            android:parentActivityName=".landing.LandingActivity" />

        <activity
            android:name=".scan.ScanResultActivity"
            android:exported="false"
            android:theme="@style/Theme.ZebraPrinterKCH"
            android:parentActivityName=".landing.LandingActivity" />

        <!-- Other screens -->
        <activity
            android:name=".product.ProductsActivity"
            android:exported="false"
            android:theme="@style/Theme.ZebraPrinterKCH" />
        <activity
            android:name=".grn.ui.GrnActivity"
            android:exported="false"
            android:theme="@style/Theme.ZebraPrinterKCH" />
        <activity
            android:name=".ZPLPrinterActivity"
            android:exported="false" />
        <activity
            android:name=".product.lots.LotsListActivity"
            android:exported="false" />
        <activity
            android:name=".scan.ui.ScanGrnActivity"
            android:exported="false"
            android:label="Scan GRN" />

    </application>
</manifest>
